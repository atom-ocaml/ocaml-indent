{
  "name": "ocaml-indent",
  "main": "./lib/main",
  "version": "0.6.2",
  "description": "Auto-indent ocaml",
  "keywords": [
    "ocaml",
    "indent",
    "ocp-indent"
  ],
  "activationHooks": [
    "language-ocaml:grammar-used",
    "language-ocaml-fix:grammar-used"
  ],
  "repository": "https://github.com/314eter/atom-ocaml-indent",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "providedServices": {
    "ocamlIndent": {
      "versions": {
        "0.3.0": "provideIndent"
      }
    }
  },
  "configSchema": {
    "ocpIndentPath": {
      "title": "Path to ocp-indent",
      "type": "string",
      "default": "ocp-indent",
      "order": 1
    },
    "ocpIndentArgs": {
      "title": "Command line arguments for ocp-indent",
      "type": "array",
      "default": [],
      "order": 2,
      "items": {
        "type": "string"
      }
    },
    "formatOnSave": {
      "title": "Format On Save",
      "type": "boolean",
      "default": false,
      "order": 3
    }
  }
}
